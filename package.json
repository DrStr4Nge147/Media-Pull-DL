{
  "name": "mediapull-dl",
  "private": true,
  "version": "0.5.1",
  "main": "electron/main.mjs",
  "description": "A powerful yt-dlp based media downloader",
  "author": "Media-Pull DL",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env VITE_DEV_SERVER_URL=http://localhost:3000 electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "build:electron": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.mediapull.dl",
    "productName": "Media-Pull DL",
    "directories": {
      "output": "dist_electron",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable",
        "nsis",
        "zip"
      ],
      "icon": "public/logo.png",
      "artifactName": "Media-Pull.DL.v${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Media-Pull.DL.Setup.v${version}.${ext}"
    },
    "portable": {
      "artifactName": "Media-Pull.DL.Portable.v${version}.${ext}"
    },
    "extraResources": [
      {
        "from": "bin",
        "to": ".",
        "filter": [
          "yt-dlp.exe",
          "ffmpeg.exe",
          "ffprobe.exe"
        ]
      }
    ]
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.0",
    "electron-builder": "^26.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.2"
  }
}
